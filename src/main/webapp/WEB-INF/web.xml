	<welcome-file-list>
		<welcome-file>index.jsf</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>ProtectedPages</web-resource-name>
			<url-pattern>/home/*</url-pattern>
			<url-pattern>/tasks/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>JEETRAIN_USER</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>JEETRAIN_REALM</realm-name>
		<form-login-config>
			<form-login-page>/login/login.jsf</form-login-page>
			<form-error-page>/login/login.jsf</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>JEETRAIN_USER</role-name>
	</security-role>
	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
	<locale-encoding-mapping-list>
		<locale-encoding-mapping>
			<locale>de</locale>
			<encoding>UTF-8</encoding>
		</locale-encoding-mapping>
		<locale-encoding-mapping>
			<locale>en</locale>
			<encoding>UTF-8</encoding>
		</locale-encoding-mapping>
	</locale-encoding-mapping-list>
</web-app>